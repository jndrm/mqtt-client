{
    "name": "drmer/mqtt-client",
    "description": "Mqtt client in PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Donald",
            "email": "donald@drmer.net"
        }
    ],
    "support": {
        "issues": "https://github.com/jndrm/mqtt-client/issues",
        "source": "https://github.com/jndrm/mqtt-client"
    },
    "require": {
        "drmer/mqtt-packet": "^0.1",
        "league/event": "^2.2",
        "php": ">=5.6.0"
    },
    "autoload": {
        "psr-4": {
            "Drmer\\Mqtt\\Client\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.27",
        "react/socket": "^1.1"
    },
    "suggest": {
        "ext-swoole": "~4.0 for SwooleClient",
        "react/socket": "To use ReactClient, require react/socket:^1.1."
    },
    "autoload-dev": {
        "psr-4": {
            "Drmer\\Tests\\Mqtt\\Client\\": "tests"
        }
    }
}
